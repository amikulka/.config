{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "shortcuts-manager",
  "title": "Shortcuts Manager",
  "description": "Shortcut manager for me",
  "icon": "shortcuts.png",
  "author": "aaron_mikulka",
  "owner": "mikulka-personal",
  "categories": [
    "Productivity",
    "Applications",
    "System"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "configPath",
      "type": "textfield",
      "placeholder": "path/to/config/",
      "default": "~/.config/shortcuts-manager/",
      "title": "Config Path",
      "required": false,
      "description": "File path for the different shortcut configs"
    }
  ],
  "commands": [
    {
      "name": "showAerospaceShortcuts",
      "title": "Show Aerospace Shortcuts",
      "description": "All of the aerospace shorcuts parsed from your config file",
      "mode": "view"
    },
    {
      "name": "showTmuxShortcuts",
      "title": "Show Tmux Shortcuts",
      "description": "All of the tmux shortcuts parsed from your config file",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@raycast/api": "^1.69.2",
    "@raycast/utils": "^1.15.0",
    "js-toml": "^1.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "react-devtools": "^4.28.4",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
